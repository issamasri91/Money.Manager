<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp">


        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_component"
            app:columnCount="3"
            app:rowCount="2">

            <TextView
                android:id="@+id/tv_income_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:text="Income"
                app:layout_gravity="left" />

            <TextView
                android:id="@+id/tv_expen_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:text="Expenses"
                app:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_balance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:text="Balance" />

            <TextView
                android:id="@+id/tv_income_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_expenses_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="3dp"
                android:padding="10dp"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_balance_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_gravity="center" />

        </androidx.gridlayout.widget.GridLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>